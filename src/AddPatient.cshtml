@model FinalPro.Models.AddPatient

@{
    ViewData["Title"] = "AddPatient";
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<center><h4>AddPatient</h4></center>
<hr />
<head>
    <style>
        mark {
            background-color: cornflowerblue;
            color: Black;
        }



        body {
            background: violet url("https://wallpaperaccess.com/full/526288.jpg") no-repeat fixed center;
        }
    </style>
</head>


<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientAD" asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <mark> <label asp-for="FirstName" class="control-label"></label></mark>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <mark> <label asp-for="LastName" class="control-label"></label></mark>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <mark>  <label asp-for="Sex" class="control-label"></label></mark>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <mark>  <label asp-for="Age" class="control-label"></label> </mark>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <mark>  <label asp-for="DOB" class="control-label"></label> </mark>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">LOGOUT</a>
</div>

